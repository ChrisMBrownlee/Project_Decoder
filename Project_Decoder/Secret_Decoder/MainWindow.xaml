<Window x:Class="Secret_Decoder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Secret_Decoder"
        mc:Ignorable="d"
        Title="Not A Secret Decoder" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Menu Items -->
        <Menu HorizontalAlignment="Left" Height="21" VerticalAlignment="Top" Width="795">
            <MenuItem Header="File">
                <MenuItem Name="Open" Header="Open File" Click="Open_Click"/>
            </MenuItem>
            <MenuItem Header="Help" Click="MenuItem_Click">
            </MenuItem>

        </Menu>

        <!-- Text Boxes -->

        <!-- Image Boxs -->
        <Image Name="ImgPicture" Margin="10,21,10,40.5" Width="775" />

        <!-- Buttons -->
        <Button Name="BtnDecode" Content="Decode" HorizontalAlignment="Left" Margin="685,387,0,0" VerticalAlignment="Top" Width="100" Height="25" IsEnabled="False" Click="BtnDecode_Click"/>

        <!-- Progress Bar -->
        <ProgressBar HorizontalAlignment="Left" Height="25" Margin="10,387,0,0" VerticalAlignment="Top" Width="670"/>
    </Grid>
</Window>
